{
  "version": "independent",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "private": true,
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "ignoreChanges": ["CHANGELOG.md", "**/__tests__/**"],
  "ignore": ["packages/websites"],
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    }
  }
}
